@using System.ComponentModel.DataAnnotations;
@using HotelierMVC.ViewModels.Account
@model LoginVM
<div class="container">
<div style="margin-block:150px" class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Login</h4>

                <form class="forms-sample" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="UserNameOrEmail" for="exampleInputUsername1">UserNameOrEmail</label>
                        <input asp-for="UserNameOrEmail" type="text" class="form-control" placeholder="UserNameOrEmail">
                        <span asp-validation-for="UserNameOrEmail"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" for="exampleInputUsername1">Password</label>
                        <input asp-for="Password" type="text" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsPersistent" for="exampleInputUsername1">IsPersistent</label>
                        <input asp-for="IsPersistent" type="checkbox" class="form-control" placeholder="IsPersistent">
                        <span asp-validation-for="IsPersistent"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary me-2">Login</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>