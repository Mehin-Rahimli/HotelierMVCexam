@using HotelierMVC.Areas.admin.ViewModels
@model UpdateMajorVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Major</h4>

                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Name" for="exampleInputUsername1">Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button asp-action="index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>